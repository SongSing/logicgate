    "version": "2.0.0",
    "tasks": [
        {
            "label": "typescript",
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }/*,
        {
            "label": "concat",
            "type": "shell",
            "command": "copy /b/y \"${workspaceRoot}\\js\\dist\\*.js\" + \"${workspaceRoot}\\js\\*.js\" \"${workspaceRoot}\\js\\dist\\build.js\"",
            "dependsOn": ["delete", "typescript"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "delete",
            "type": "shell",
            "command": "del /Q \"${workspaceRoot}\\js\\dist\\*\""
        }*/
    ]
}